{
  "monitoring": {
    "read_interval": 0.1,
    "publish_interval": 5.0,
    "save_interval": 10.0,
    "debounce_time": 0.05,
    "enable_change_detection": true
  },
  "mqtt": {
    "broker": "192.168.100.1",
    "port": 1883,
    "username": "",
    "password": "",
    "topic_base": "trt/pins",
    "qos": 1,
    "retain": false
  },
  "web": {
    "port": 5001,
    "host": "0.0.0.0",
    "enable_auth": false,
    "username": "admin",
    "password": "2020"
  },
  "database": {
    "file": "/opt/trt/data/pin_monitor.db",
    "retention_days": 30,
    "max_records": 100000,
    "backup_enabled": true
  },
  "alerts": {
    "enabled": true,
    "email_on_change": false,
    "mqtt_on_change": true,
    "log_changes": true,
    "critical_pins": ["emergency_stop", "limit_switch_1"]
  },
  "calibration": {
    "analog_inputs": {
      "sensor_1": {
        "min_voltage": 0.0,
        "max_voltage": 10.0,
        "min_value": 0.0,
        "max_value": 100.0,
        "units": "PSI",
        "offset": 0.0,
        "scale": 1.0
      },
      "sensor_2": {
        "min_voltage": 1.0,
        "max_voltage": 5.0,
        "min_value": 4.0,
        "max_value": 20.0,
        "units": "mA",
        "offset": 0.0,
        "scale": 1.0
      }
    }
  },
  "safety": {
    "emergency_shutdown": {
      "enabled": true,
      "trigger_pins": ["emergency_stop"],
      "action": "shutdown_all_outputs",
      "notification": true
    },
    "watchdog": {
      "enabled": true,
      "timeout": 30,
      "reset_on_timeout": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "/opt/trt/logs/pin-monitor.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "console_output": true
  }
}